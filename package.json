{
  "name": "wineclub-monorepo",
  "version": "1.0.0",
  "description": "WineClub Luxury Wine Club Management Platform - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tests/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "core:dev": "cd apps/core && wasp start",
    "marketing:dev": "cd apps/marketing && npm run dev",
    "e2e:test": "cd tests/e2e && npm test"
  },
  "devDependencies": {
    "turbo": "^1.10.0"
  },
  "engines": {
    "node": ">=18.14.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.9.2"
}
