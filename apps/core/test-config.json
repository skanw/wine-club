    "browserOptions": {
      "headless": false,
      "slowMo": 100,
      "args": ["--no-sandbox", "--disable-setuid-sandbox"]
    },
    "screenshots": {
      "enabled": true,
      "directory": "test-screenshots",
      "onFailure": true,
      "onSuccess": false
    }
